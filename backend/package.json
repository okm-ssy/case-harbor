{
  "name": "case-harbor-backend",
  "version": "1.0.0",
  "description": "Backend API server for CaseHarbor test case management",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": "24.4.1"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.19",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "globals": {
      "NODE_ENV": "test"
    }
  }
}
